<div class="row">
    {{#each ideas}}

    <div class="col-md-4">
        <div class="card card-body mb-2">
            <h4>{{title}}</h4>
            <p>{{details}}</p>
            <a href="/ideas/edit/{{_id}}" class="btn btn-dark btn-block mb-2">Edit</a>
            <form action="/ideas/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-danger btn-block" value="DELETE">
            </form>
        </div>
    </div>

    {{else}}
    <p>No video ideas listed</p>
    {{/each}}
</div>